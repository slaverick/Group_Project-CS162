

class Rock : public Tool
{
private:
  (inherited)
public:
  Paper();
  bool fight(Tool)
};

Paper::Paper()
{
  type = r;
  strength = 1;
}

bool Paper::fight(Tool t)
{
  char c = t.type;
  
  switch (c)
  {
  case p
  {
    if (strength > t.strength)
      return true;
    else
      return false;
    break;
  }
  case s
  {
    if (static_cast<double>(strength/2)>t.strength)
      return true;
    else
      return false;
    break;
  }
  case r
  {
    if ((strength*2)>t.strength)
       return true;
    else
      return false;
    break;
  }
  }
